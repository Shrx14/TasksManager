@model TasksManager.Models.TaskMaster

@{
    ViewData["Title"] = "Create Task";
}

<h1>Create Task</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EmployeeDomainId"></label>
        <input asp-for="EmployeeDomainId" class="form-control" />
        <span asp-validation-for="EmployeeDomainId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskDescription"></label>
        <textarea asp-for="TaskDescription" class="form-control"></textarea>
        <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SiteCode"></label>
        <input asp-for="SiteCode" class="form-control" />
        <span asp-validation-for="SiteCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlantCode"></label>
        <input asp-for="PlantCode" class="form-control" />
        <span asp-validation-for="PlantCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Functions"></label>
        <input asp-for="Functions" class="form-control" />
        <span asp-validation-for="Functions" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
