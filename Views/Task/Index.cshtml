@model IEnumerable<TasksManager.Models.TaskMaster>

@{
    ViewData["Title"] = "Tasks List";
}

<h1>Tasks List</h1>

<p>
    <a asp-action="Create">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Task ID</th>
            <th>Employee Domain ID</th>
            <th>Task Description</th>
            <th>Site Code</th>
            <th>Plant Code</th>
            <th>Functions</th>
            <th>Created Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.TaskId</td>
            <td>@item.EmployeeDomainId</td>
            <td>@item.TaskDescription</td>
            <td>@item.SiteCode</td>
            <td>@item.PlantCode</td>
            <td>@(item.Functions ?? "")</td>
            <td>@item.CreatedDate.ToString("g")</td>
            <td>@(item.Status ?? "No status")</td>
            <td>
                <a asp-action="EditStatus" asp-route-id="@item.TaskId">Edit Status</a>
            </td>
        </tr>
}
    </tbody>
</table>
